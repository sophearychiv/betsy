
<article class="container main-article">
<div>
  <h2><%= @category.name %></h2>
  <table>
    <thead>
      <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @category.products.each do |product| %>
      <tr>
        <td><img src="<%=product.photo_url%>" alt="Image of <%=product.name%>"></td>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</article>