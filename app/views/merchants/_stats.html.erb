<div class="container" id="dashboard">
  <div class="jumbotron text-center">
    <h7>My Order Statistics</h7>
  </div>
</div>
<br>
<div class="card-deck">
  <div class="card mb-4">
    <h5 class="card-header d-flex w-100 justify-content-between align-items-center">
      <small>Sales (To Date) </small><small><%= display_price(@merchant.total_revenue) %></small>
    </h5>
    <div class="card-body">
      <% revenue = @merchant.revenue_by_status %>
      <ul class="list-group">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Paid</small>
            <small><%= display_price(revenue["paid"]) %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Complete</small>
            <small><%= display_price(revenue["complete"]) %></small>
          </h5>
        </li>
      </ul>
    </div>
  </div>
  <div class="card mb-4" >
    <h5 class="card-header d-flex w-100 justify-content-between align-items-center">
    <%# working %>
      <small>Total Orders </small><small><%= Merchant.items_by_orderid(@merchant.orderitems).size %></small>
    </h5>
    <div class="card-body">
      <ul class="list-group">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Pending</small>
            <small><%= @merchant.orders_by_status("Pending").size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Paid</small>
            <small><%= @merchant.orders_by_status("Paid").size%></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Complete</small>
            <small><%= @merchant.orders_by_status("Complete").size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Cancelled</small>
            <small><%= @merchant.orders_by_status("Cancelled").size %></small>
          </h5>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="card-deck">
  <div class="card mb-4">
    <h5 class="card-header d-flex w-100 justify-content-between align-items-center">
      <small>Total Items </small><small><%= @merchant.items_by_status("Paid").size %></small>
    </h5>
    <div class="card-body">
      <ul class="list-group">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Pending</small>
            <small><%= @merchant.items_by_status("Pending").size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Paid</small>
            <small><%= @merchant.items_by_status("Paid").size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Complete</small>
            <small><%= @merchant.items_by_status("Complete").size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Cancelled</small>
            <small><%= @merchant.items_by_status("Cancelled").size %></small>
          </h5>
        </li>
      </ul>
    </div>
  </div>
  <div class="card mb-4">
    <h5 class="card-header w-100 align-items-center">
      <small>Products</small>
    </h5>
    <div class="card-body">
      <ul class="list-group">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>In Stock</small>
            <small><%= @activeproducts.size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Out Of Stock</small>
            <small><%= @soldout.size %></small>
          </h5>
        </li>
      </ul>
      <ul class="list-group mt-3">
        <li class="list-group-item list-group-item-light flex-column align-items-center">
          <h5 class="d-flex w-100 justify-content-between">
            <small>Inactive</small>
            <small><%= @inactive.size %></small>
          </h5>
        </li>
      </ul>
    </div>
  </div>
</div>
