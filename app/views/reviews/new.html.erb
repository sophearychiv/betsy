<article>
  <h2> Please leave us some feedback </h2>

  <%= form_with model: @review do |f|%>

    <div class="rating-labels">
      <%# <%= f.label :rating %> %>
      <%= f.radio_button :rating, value: 1, class: "form-control" %>
      <%= f.radio_button :rating, value: 2, class: "form-control" %>
      <%= f.radio_button :rating, value: 3, class: "form-control" %>
      <%= f.radio_button :rating, value: 4, class: "form-control" %>
      <%= f.radio_button :rating, value: 5, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :comments %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <%= f.submit 'Leave comment', class: "btn btn-primary" %>
  <% end %>
</article>
